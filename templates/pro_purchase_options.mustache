{{!
    @template local_vfcore/pro_purchase_options

    Pro options

    Example context (json):
    {
        "code": "SAMPLE",
        "name": "PRODUCT NAME",
        "description": "Purchase conditions description",
        "unitprice": "0.0",
        "unit": "Euro"
    }
}}
<!-- local_vfcore/puchaseoptions -->
<div class="purchaseoption" style="display:inline-block">
    <div class="purchaseoption-header">
    <h4>[{{code}}] - {{name}}</h4>
    </div>
    <div class="purchaseoption-content" style="display: flex;justify-content:space-between">
        <div class="purchaseoption-description">{{{description}}}</div>
        <div class="purchaseoption-pricing">{{unitprice}} {{unit}}</div>
    </div>
</div>
<!-- /local_vfcore/purchaseoptions -->